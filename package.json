{
  "name": "stumpfi",
  "version": "1.0.0",
  "description": "One file format to rule them all.",
  "repository": "https://github.com/matthieujabbour/stumpfi",
  "homepage": "https://github.com/matthieujabbour/stumpfi",
  "main": "./src/main.ts",
  "keywords": [
    "universal",
    "file",
    "format"
  ],
  "author": "Matthieu JABBOUR <matthieu.jabbour@gmail.com> (https://github.com/matthieujabbour)",
  "contributors": [
    {
      "name": "Matthieu JABBOUR",
      "url": "https://github.com/matthieujabbour"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matthieujabbour/stumpfi/issues"
  },
  "types": "./config/types.d.ts",
  "devDependencies": {
    "@types/fs-extra": "^4.0.0",
    "@types/he": "^0.5.29",
    "@types/jest": "^21.1.0",
    "@types/react": "^16.0.4",
    "@types/react-dom": "^15.5.4",
    "@types/webpack": "^3.0.9",
    "awesome-typescript-loader": "^3.2.3",
    "fs-extra": "^4.0.1",
    "jest": "^21.1.0",
    "ts-jest": "^21.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "tslint-config-stumpfi": "^1.0.6",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.4.2",
    "webpack": "^3.5.5"
  },
  "dependencies": {
    "he": "^1.1.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "scripts": {
    "start": "ts-node scripts/start",
    "build": "ts-node scripts/build",
    "test": "ts-node scripts/test --coverage --watch",
    "doc": "ts-node scripts/doc"
  },
  "engines": {
    "node": ">= 4"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
